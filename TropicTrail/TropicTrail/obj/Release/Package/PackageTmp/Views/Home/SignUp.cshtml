@model TropicTrail.UserAccount

@{
    ViewBag.Title = "SignUp";
}
<link href="~/Content/css/SignUp.css" rel="stylesheet" />

<form method="post" >
    <div class="col-lg-8">
        <div class="center-form">
            @using (Html.BeginForm())
            {
                <div class="container">
                    <div class="rectangle">

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                Username
                                <div class="col-md-18">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Password
                                <div class="col-md-18">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "Password", @required = true } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Confirm Password
                                <div class="col-md-18">
                                    <input type="password" class="form-control" name="ConfirmPass" value="" required />
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Email
                                <div class="col-md-18">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = true } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group" onclick="signUpForm()" >
                                <div class="col-md-offset-2 col-md-18">
                                    <input type="submit" class="btn btn-success" value="Submit"  />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</form>
<script>
    function signUpForm() {
        swal.fire({
            title: 'Success',
            text: 'Account Successfully Created',
            icon: 'Success'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = 'Verify';
            }
        });
    }
</script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>