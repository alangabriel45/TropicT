@model IEnumerable<Offers>
@{
    ViewBag.Title = "Offers";
}

<head>
    <link href="~/Content/css/index-css.css" rel="stylesheet" />
</head>

<body class="page-body">
    <div class="card-container">
            <div class="row row-cols-2 row-cols-md-4">
                @foreach (var item in Model)
                {
                    <div class="col mb-4">
                        <div class="card">
                            <img src="~/Content/img/tour1.jpg" class="card-img-top" alt="Product Image">
                            <div class="card-body">
                                <h3 class="card-title">@item.TourType.tourName</h3>
                                <h5 class="card-title">@item.offersName</h5>
                                <p class="card-text">Click to see more details.</p>
                                <a href="~/Home/Details/@item.offersId" class="btn btn-secondary">See More</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
    </div>
</body>