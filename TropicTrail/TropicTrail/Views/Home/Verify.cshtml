
@{
    ViewBag.Title = "Verify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Verify OTP</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
            }

            .container {
                max-width: 400px;
                margin: 50px auto;
                padding: 20px;
                background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .form-group {
                margin-bottom: 20px;
            }

            label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            input[type="text"] {
                width: calc(25% - 10px); /* Adjusted width to leave space for borders */
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
                font-size: 16px;
                text-align: center; /* Center align the text */
            }

            .btn-submit {
                background-color: #007bff;
                color: #fff;
                padding: 10px 20px;
                border: none;
                border-radius: 3px;
                cursor: pointer;
                font-size: 16px;
            }

                .btn-submit:hover {
                    background-color: #0056b3;
                }
        </style>
    </head>
    <body>
        <div class="container">
            <h2>Verify OTP</h2>
            <form action="/Verify" method="post">
                <div class="form-group">
                    <label for="otp">Enter OTP:</label>
                    <input type="text" id="otp1" name="otp1" maxlength="1" required>
                    <input type="text" id="otp2" name="otp2" maxlength="1" required>
                    <input type="text" id="otp3" name="otp3" maxlength="1" required>
                    <input type="text" id="otp4" name="otp4" maxlength="1" required>
                </div>
                <input type="hidden" name="username" value="@ViewBag.Username">
                <div class="form-group">
                    <button type="submit" class="btn-submit">Verify</button>
                </div>
            </form>
        </div>
    </body>
</html>
}
<div class="form-group">
    <div class="col-md-10">
        <a href="~/Home/SignIn">Sign In</a>
    </div>
</div>