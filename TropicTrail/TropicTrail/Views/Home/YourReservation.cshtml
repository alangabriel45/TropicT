@model IEnumerable<TropicTrail.Reservation>

@{
    ViewBag.Title = "YourReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.offersName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.maxGuest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tourId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.checkIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contactNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.offersName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.maxGuest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tourId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.checkIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contactNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a href="#" class="btn-finish" data-id="@item.id" data-toggle="modal" data-target="#finishModal">Finish</a>
            </td>
        </tr>
    }

</table>

<div id="finishModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rate the service and confirm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Your rating form here -->
                <label for="rating">Rate the service:</label>
                <input type="number" id="rating" name="rating" min="1" max="5" required />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="confirmFinish">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/js/pop.js"></script>
