@*@model IEnumerable<TropicTrail.Reservation>*@
@model TropicTrail.Lists
@{
    ViewBag.Title = "ManageReservations";
}
<link href="~/Content/css/ManageReservation.css" rel="stylesheet" />
<link href="~/Content/css/style.css" rel="stylesheet" />

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <table class="table" style="background-color: white;">
        <thead class="thread-dark">
            <tr>
                <th scope="col">
                    User Id
                </th>
                <th scope="col">
                    Offers Name
                </th>
                <th scope="col">
                    Max Guest
                </th>
                <th scope="col">
                    Tour
                </th>
                <th scope="col">
                    Check In
                </th>
                <th scope="col">
                    Price
                </th>
                <th scope="col">
                    Last Name
                </th>
                <th scope="col">
                    First Name
                </th>
                <th scope="col">
                    Contact Number
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col">
                    Payment
                </th>
                <th scope="col">
                    Balance
                </th>
                <th scope="col">
                    Status
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.manageReserve)
            {
                <tr>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.User_ID)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Offers)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Maximum_Guests)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Tour_Name)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Check_In)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Last_Name)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.First_Name)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Contact__)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Email_Address)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Payment)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td scope="col">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary btn-success" data-id="@item.ID">Confirm</a> 
                        @using (Html.BeginForm("ReservationDelete", "Admin", FormMethod.Post))
                        {
                            @Html.Hidden("id", item.ID)
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        }
                    </td>
                </tr>
            }

    </table>


    <!-- Confirmation Modal -->
    <div id="confirmModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Reservation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to confirm this reservation?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmReservationBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>
<script>
    $(document).ready(function () {
        var errorRes = '@TempData["ErrorRes"]'; // Get the value of TempData["ErrorRes"]
        if (errorRes) { // Check if TempData["ErrorRes"] is not empty
            // Display an alert with the error message
            alert(errorRes);
        }
    });
</script>
    <script src="~/Content/js/pop.js"></script>  
